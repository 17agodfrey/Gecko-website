<% layout('layouts/boilerplate')%>
<div class="row">
    <h1>Sell Gecko</h1>
    <div class="col-md-6 offset-md-3">
        <form action="/geckos/new" method="POST" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="name">Name</label>
                <input class="form-control" type="text" id="name" name="gecko[name]" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="breed">Breed</label>
                <input class="form-control" type="text" id="breed" name="gecko[breed]" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="age">Age</label>
                <input class="form-control" type="text" id="age" name="gecko[age]" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Price</label>
                <input class="form-control" type="text" id="price" name="gecko[price]" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <input class="form-control" type="text" id="description" name="gecko[description]" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <div class="form-file custom-file">
                    <input type="file" class="form-file-input" id="image" name="image" multiple>
                    <label class="form-file-label" for="image">
                        <span class="form-file-text custom-file-label">Choose image(s)...</span>
                        <span class="form-file-button">Browse</span>
                    </label>
                </div>
            </div>
            <script>
                $(document).ready(function () {
                    bsCustomFileInput.init()
                })
            </script>
            
            <div class="mb-3">
                <button class="btn btn-success">Add Gecko</button>
            </div>
        </form>
    </div>
</div>