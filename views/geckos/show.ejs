<% layout('layouts/boilerplate')%>
<div class="row justify-content-center">
    <div class="col-6">

        <div id="geckoCarousel" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <% gecko.images.forEach((img, i) => {  %>
                <div class="carousel-item <%= i === 0 ? 'active' : ''%>">
                    <img src="<%= img.url%>" class="d-block w-100" alt="">
                </div>
                <% }) %>

            </div>
            <% if(gecko.images.length > 1) {%>
            <a class="carousel-control-prev" href="#geckoCarousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#geckoCarousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
            <% } %>
        </div>

        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title"><%= gecko.name%></h5>
                <p class="card-text"><%= gecko.description%></p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item text-muted"><%= gecko.breed%></li>
                <li class="list-group-item"><%= gecko.age%></li>
                <li class="list-group-item">$<%= gecko.price%></li>
            </ul>
            <div class="card-body">
                <a class="card-link btn btn-info" href="/geckos/<%=gecko._id%>/edit">Edit</a>
                <form class="d-inline" action="/geckos/<%=gecko._id%>?_method=DELETE" method="POST">
                    <button class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>
        